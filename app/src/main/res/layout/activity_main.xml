<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/image_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:hint="@string/past_link"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_edit" />

    <com.google.android.material.button.MaterialButton
        android:text="@string/send"
        android:id="@+id/send_btn"
        android:textSize="@dimen/size_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/margin_16"
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintTop_toBottomOf="@id/home_iv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/random_btn"
        android:text="@string/random"
        android:textSize="@dimen/size_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/margin_16"
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintTop_toBottomOf="@id/send_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>